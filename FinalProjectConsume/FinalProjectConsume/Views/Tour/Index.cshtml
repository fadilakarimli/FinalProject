@model TourPageVM
<!-- Search Section Start -->
<div class="header-search-bar d-flex align-items-center">
    <button class="search-close">×</button>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="search-bar">
                    <div class="contact-form-box contact-search-form-box">
                        <form action="#">
                            <input type="email" placeholder="Search here...">
                            <button type="submit"><i class="far fa-search"></i></button>
                        </form>
                        <p>Type above and press Enter to search. Press Close to cancel.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--  Breadcrumb Section Start -->
<div class="breadcrumb-wrapper section-padding  bg-cover" style="background-image: url('~/assets/img/breadcrumb-bg.jpg');">
    <div class="container-fluid">
        <div class="page-heading">
            <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".3s">
                <li>
                    <a href="index.html">
                        Home
                    </a>
                </li>
                <li>
                    <i class="far fa-slash"></i>
                </li>
                <li>
                    Listing Sidebar
                </li>
            </ul>
            <h1 class="wow fadeInUp" data-wow-delay=".5s">Listing Sidebar</h1>
        </div>
    </div>
    <div class="plane-shape float-bob-x">
        <img src="~/assets/img/breadcrumb-plane.png" alt="img">
    </div>
</div>

<!-- Amazing Tour Section Start -->
<section class="amazing-tour-section section-padding">
    <div class="container">
        <div class="amazing-tour-wrapper">
            <div class="row g-4">
                <div class="col-xl-3 col-lg-4">
                    <div class="tour-sidebar-area sticky-style">
                        <div class="tour-destination-sidebar">
                            <div class="booking-list-area">
                                <div class="booking-list">
                                    <div class="icon">
                                        <img src="~/assets/img/hero/location.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <h5>Destination</h5>
                                        <div class="form-clt">
                                            <div class="form">
                                                <select class="single-select w-100" name="cityId">
                                                    <option disabled selected>Your city</option>
                                                    @foreach (var city in Model.Cities)
                                                    {
                                                        <option value="@city.Id">@city.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="booking-list">
                                    <div class="icon">
                                        <img src="~/assets/img/hero/location.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <h5>All Activity</h5>
                                        <div class="form-clt">
                                            <div class="form">
                                                <select class="single-select w-100">
                                                    <option disabled selected>Choose Activity</option>
                                                    @if (Model.Activities != null && Model.Activities.Any())
                                                    {
                                                        foreach (var amenity in Model.Activities)
                                                        {
                                                            <option value="@amenity.Id">@amenity.Name</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option disabled>No activities found</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="booking-list">
                                    <div class="icon">
                                        <img src="~/assets/img/hero/location.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <h5>Departure Date</h5>
                                        <div class="form-clt">
                                            <div id="datepicker" class="input-group date" data-date-format="dd-mm-yyyy">
                                                <input class="form-control" type="text" placeholder="Date Form" readonly="">
                                                <span class="input-group-addon"><i class="far fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="booking-list style-2">
                                    <div class="icon">
                                        <img src="~/assets/img/hero/location.png" alt="img">
                                    </div>
                                    <div class="content">
                                        <h5>Guest</h5>
                                        <div class="form-clt">
                                            <div class="form">
                                                <select class="single-select w-100">
                                                    <option> Your Guest</option>
                                                    <option>  Guest 01</option>
                                                    <option> Guest 02</option>
                                                    <option> Guest 03</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tour-sidebar-widget">
                                    <div class="wid-title">
                                        <h3>Filter by Price</h3>
                                    </div>
                                    <div class="price-range-wrapper">
                                        <div class="slider-container">
                                            <!-- Range sliders -->
                                            <input type="range" id="min-slider" class="slider" min="130" max="500"
                                                   value="130">
                                            <input type="range" id="max-slider" class="slider" min="130" max="500"
                                                   value="250">
                                        </div>
                                        <div class="price-text pt-4 d-flex gap-3">
                                            <label for="amount">Price:</label>
                                            <input type="text" id="amount" readonly style="border:0;">
                                        </div>
                                    </div>
                                </div>

                                <div class="tour-sidebar-widget">
                                    <div class="wid-title">
                                        <h3>Amenities</h3>
                                    </div>
                                    <div class="checkbox-items">
                                        @if (Model.Amenities != null && Model.Amenities.Any())
                                        {
                                            foreach (var amenity in Model.Amenities)
                                            {
                                                <label class="checkbox-single">
                                                    <span class="d-flex gap-xl-3 gap-2 align-items-center">
                                                        <span class="checkbox-area d-center">
                                                            <input type="checkbox" name="amenities" value="@amenity.Id" />
                                                            <span class="checkmark d-center"></span>
                                                        </span>
                                                        <span class="text-color">
                                                            @amenity.Name
                                                        </span>
                                                    </span>
                                                </label>
                                            }
                                        }
                                        else
                                        {
                                            <p>No amenities found.</p>
                                        }
                                    </div>
                                </div>

                                <div class="search-widget">
                                    <form action="#">
                                        <button type="submit" class="theme-btn"><span>Search</span><i class="fal fa-search"></i></button>
                                    </form>
                                </div>
                            </div>
                          
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8">
                    <div class="row justify-content-center">
                        @foreach (var tour in Model.Tours)
                        {
                            <div class="col-4 wow fadeInUp" data-wow-delay=".2s">
                                <div class="tour-box-items">
                                    <div class="thumb">
                                        <img src="@tour.ImageUrl" alt="Tour image" />
                                    </div>
                                    <div class="content">
                                        <span>@tour.CityName</span>
                                        <h4>
                                            <a href="/Tour/Details/@tour.Id">@tour.Name</a>
                                        </h4>
                                        <h6>
                                            From <span>$@tour.Price</span>
                                            @if (tour.OldPrice.HasValue)
                                            {
                                                <del>$@tour.OldPrice</del>
                                            }
                                        </h6>
                                        <ul class="list">
                                            <li>
                                                <i class="far fa-calendar"></i>
                                                @tour.Duration
                                            </li>
                                            <li>
                                                <i class="far fa-flag"></i>
                                                @tour.CountryCount Countries
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>


                    <div class="page-nav-wrap mt-5 text-center wow fadeInUp" data-wow-delay=".3s">
                        <ul>
                            <li><a class="page-numbers" href="#">01</a></li>
                            <li><a class="page-numbers" href="#">02</a></li>
                            <li><a class="page-numbers" href="#">03</a></li>
                            <li><a class="page-numbers" href="#">04</a></li>
                            <li><a class="page-numbers" href="#">05</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>