@model FinalProjectConsume.ViewModels.UI.BlogDetailVM

<!-- Search Section Start -->
<div class="header-search-bar d-flex align-items-center">
    <button class="search-close">×</button>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="search-bar">
                    <div class="contact-form-box contact-search-form-box">
                        <form action="#">
                            <input type="text" placeholder="Search here...">
                            <button type="submit"><i class="far fa-search"></i></button>
                        </form>
                        <p>Type above and press Enter to search. Press Close to cancel.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Breadcrumb Section Start -->
<div class="breadcrumb-wrapper section-padding  bg-cover" style="background-image: url('/assets/img/tour/@Model.Settings.FirstOrDefault(x =>x.Key == "TourBanner")?.Value">

    <div class="container-fluid">
        <div class="page-heading">
            <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".3s">
                <li><a href="/">Home</a></li>
                <li><i class="far fa-slash"></i></li>
                <li>Blog Details</li>
            </ul>
            <h1 class="wow fadeInUp" data-wow-delay=".5s">Blog Detail</h1>
        </div>
    </div>
    <div class="plane-shape float-bob-x">
        <img src="~/assets/img/@Model.Settings.FirstOrDefault(x =>x.Key == "TourBannerFly")?.Value">
    </div>
</div>

<!-- Blog Wrapper Section Start -->
<section class="blog-wrapper news-wrapper section-padding">
    <div class="container">
        <div class="news-area">
            <div class="row">
                <div class="col-12 col-xl-8 col-lg-7">
                    <div class="blog-post-details border-wrap mt-0">
                        <div class="single-blog-post post-details mt-0">
                            <div class="post-content pt-0">
                                <h2>@Model.Blog.Title</h2>
                                <div class="post-meta mt-3">
                                   @*  <span><i class="fal fa-user"></i> @Model.Blog.Author</span>
                                    <span><i class="fal fa-comments"></i> @Model.Blog.CommentCount Comments</span> *@
                                    <span><i class="fal fa-calendar-alt"></i> @Model.Blog.CreatedDate.ToString("dd MMMM yyyy")</span>
                                </div>
                                <p>@Model.Blog.ShortDescription</p>
                                <img src="@Model.Blog.Image" alt="blog__img" class="single-post-image">
                                <p>@Html.Raw(Model.Blog.Content)</p>
                            </div>
                        </div>
                     @*    <!-- Related Blogs -->
                        <div class="pt-5">
                            <h3>Related Blogs</h3>
                            <div class="row">
                                @foreach (var related in Model.RelatedBlogs)
                                {
                                    <div class="col-md-6 mb-4">
                                        <div class="border p-3 rounded">
                                            <img src="@related.Image" class="img-fluid mb-2" alt="@related.Title">
                                            <h5><a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@related.Id">@related.Title</a></h5>
                                            <p>@related.ShortDescription</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div> *@
                    </div>
                </div>
                <div class="col-12 col-xl-4 col-lg-5">
                    <!-- Optional Sidebar -->
                </div>
            </div>
        </div>
    </div>
</section>
