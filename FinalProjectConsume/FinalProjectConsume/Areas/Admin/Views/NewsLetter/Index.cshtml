@model List<NewsLetter>

@{
    ViewData["Title"] = "Subscribe List";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>Subscribe's</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Email</td>
                    <td>
                        <form asp-controller="NewsLetter" asp-action="Delete" asp-area="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@Model[i].Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
