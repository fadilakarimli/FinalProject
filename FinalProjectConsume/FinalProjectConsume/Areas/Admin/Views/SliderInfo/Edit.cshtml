@model FinalProjectConsume.Models.SliderInfo.SliderInfoEdit

@{
    ViewData["Title"] = "Edit SliderInfo";
}

<div class="container" style="margin-left:300px; margin-top:50px; max-width:600px;">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" asp-controller="SliderInfo" asp-area="Admin" method="post">
        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="SliderInfo" asp-area="Admin" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>


