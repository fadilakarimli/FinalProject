@model FinalProjectConsume.Models.AboutDestination.AboutDestination

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>About Destination Details</h2>

    <div class="form-group">
        <label>Name:</label>
        <p>@Model.Name</p>
    </div>

    <div class="form-group">
