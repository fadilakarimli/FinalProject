@model FinalProjectConsume.Models.AboutTeamMember.AboutTeamMemberEdit

@{
    ViewData["Title"] = "Team Member Edit";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Position"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="About"></label>
            <textarea asp-for="About" class="form-control"></textarea>
            <span asp-validation-for="About" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Image:</label>
            @if (ViewData["CurrentImage"] != null)
            {
                <div>
                    <img src="@ViewData["CurrentImage"]" alt="Current Image" style="max-width: 200px; max-height: 200px;" />
                </div>
            }
        </div>

        <div class="form-group">
            <label asp-for="Image">Upload New Image</label>
            <input asp-for="Image" type="file" class="form-control-file" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
