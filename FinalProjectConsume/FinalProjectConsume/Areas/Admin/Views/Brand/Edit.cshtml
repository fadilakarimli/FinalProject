@model FinalProjectConsume.Models.Brand.BrandEdit

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>Edit Brand</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="form-group mb-3">
                <label>Before photo:</label><br />
                <img src="@Model.ImageUrl" style="width:200px; height:auto; border-radius:5px;" />
            </div>
        }

        <div class="form-group">
            <label for="Image">Choose photo</label>
            <input asp-for="Image" type="file" class="form-control" accept=".jpg,.jpeg,.png,.svg" id="imageInput" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>
