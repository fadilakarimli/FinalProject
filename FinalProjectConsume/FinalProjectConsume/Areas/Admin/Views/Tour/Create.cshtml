        <div class="form-group">
            <label>Select Amenities</label>
            @foreach (var item in ViewBag.Amenities as List<SelectListItem>)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="AmenityIds" value="@item.Value" id="amenity_@item.Value" />
                    <label class="form-check-label" for="amenity_@item.Value">@item.Text</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-success mt-3">Create</button>
    </form>
</div>
