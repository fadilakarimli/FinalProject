@model FinalProjectConsume.Models.Tour.TourCreate

@{
    ViewData["Title"] = "Create Tour";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>Create Tour</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryCount"></label>
            <input asp-for="CountryCount" type="number" class="form-control" />
            <span asp-validation-for="CountryCount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OldPrice"></label>
            <input asp-for="OldPrice" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="OldPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CityId"></label>
            <input asp-for="CityId" type="number" class="form-control" />
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile"></label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Activity IDs (comma separated)</label>
            <input name="ActivityIds" class="form-control" placeholder="e.g. 1,2,3" />
        </div>

        <div class="form-group">
            <label>Amenity IDs (comma separated)</label>
            <input name="AmenityIds" class="form-control" placeholder="e.g. 4,5,6" />
        </div>

        <button type="submit" class="btn btn-success mt-3">Create</button>
    </form>
</div>
