@model IEnumerable<FinalProjectConsume.Models.Tour.Tour>

<div class="container" style="margin-left:300px; margin-top:50px;">
    <div class="col-sm-12 col-xl-10">
        <a asp-controller="Tour" asp-action="Create" asp-area="Admin" class="btn btn-success mb-3">Create</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Duration</th>
                    <th>Country Count</th>
                    <th>Price</th>
                    <th>Şəhər</th>
                    <th>Activities</th>
                    <th>Amenities</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" style="width:100px; height:60px;" alt="@item.Name" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Duration</td>
                            <td>@item.CountryCount</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.CityName</td>
                            <td>@string.Join(", ", item.ActivityNames ?? new List<string>())</td>
                            <td>@string.Join(", ", item.Amenities ?? new List<string>())</td>
                            <td>
                                <form asp-controller="Tour" asp-action="Delete" asp-area="Admin" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                                <a class="btn btn-warning btn-sm" asp-controller="Tour" asp-action="Edit" asp-route-id="@item.Id" asp-area="Admin">Edit</a>
                                <a class="btn btn-info btn-sm" asp-controller="Tour" asp-action="Detail" asp-route-id="@item.Id" asp-area="Admin">Detail</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">Tur tapılmadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
