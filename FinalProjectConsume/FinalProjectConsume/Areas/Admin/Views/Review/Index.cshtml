@model List<FinalProjectConsume.ViewModels.ReviewListVM>

@{
    ViewData["Title"] = "Reviews List";
}

<h2>@ViewData["Title"]</h2>

<div class="container" style="margin-left:190px; margin-top:50px;">


@if (Model == null || !Model.Any())
{
    <p>No reviews found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Message</th>
                <th>Star</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Name</td>
                    <td>@review.Email</td>
                    <td>@review.Phone</td>
                    <td>@review.Message</td>
                    <td>@review.Star</td>
                    <td>@review.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this review?');">
                            <input type="hidden" name="id" value="@review.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                            <a asp-action="Detail" asp-route-id="@review.Id" class="btn btn-info btn-sm">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

</div>
