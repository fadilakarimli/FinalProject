@model FinalProjectConsume.Models.AboutAgency.AboutAgency

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>About Agency Details</h2>

    <div class="form-group">
        <label>Title:</label>
        <p>@Model.Title</p>
    </div>

    <div class="form-group">
        <label>Subtitle:</label>
        <p>@Model.Subtitle</p>
    </div>

    <div class="form-group">
        <label>Description:</label>
        <p>@Model.Desc</p>
    </div>

    <div class="form-group">
        <label>Image:</label><br />
        <img src="@Model.Image" alt="About Agency Image" style="max-width: 300px;" />
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
