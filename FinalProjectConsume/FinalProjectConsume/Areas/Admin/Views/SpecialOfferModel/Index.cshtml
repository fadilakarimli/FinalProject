    @model IEnumerable<FinalProjectConsume.Models.SpecialOffer.SpecialOffer>

@{
    ViewData["Title"] = "Special Offer List";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Create</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title Small</th>
                <th>Title Main</th>
                <th>Background Image</th>
                <th>Discount Image</th>
                <th>Bag Image</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model)
            {
                <tr>
                    <td>@offer.TitleSmall</td>
                    <td>@offer.TitleMain</td>
                    <td><img src="@offer.BackgroundImageUrl" width="80" /></td>
                    <td><img src="@offer.DiscountImageUrl" width="80" /></td>
                    <td><img src="@offer.BagImageUrl" width="80" /></td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@offer.Id" class="btn btn-info btn-sm">Detail</a>
                        <a asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@offer.Id" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure to delete this offer?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
