@model FinalProjectConsume.Models.SpecialOffer.SpecialOfferEdit

@{
    ViewData["Title"] = "Edit Special Offer";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="TitleSmall"></label>
            <input asp-for="TitleSmall" class="form-control" />
            <span asp-validation-for="TitleSmall" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TitleMain"></label>
            <input asp-for="TitleMain" class="form-control" />
            <span asp-validation-for="TitleMain" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Background Image</label><br />
            @if (!string.IsNullOrEmpty(Model.CurrentBackgroundImageUrl))
            {
                <img src="@Model.CurrentBackgroundImageUrl" width="150" />
            }
        </div>
        <div class="form-group">
            <label asp-for="BackgroundImage">New Background Image (optional)</label>
            <input asp-for="BackgroundImage" class="form-control" type="file" />
            <span asp-validation-for="BackgroundImage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Discount Image</label><br />
            @if (!string.IsNullOrEmpty(Model.CurrentDiscountImageUrl))
            {
                <img src="@Model.CurrentDiscountImageUrl" width="150" />
            }
        </div>
        <div class="form-group">
            <label asp-for="DiscountImage">New Discount Image (optional)</label>
            <input asp-for="DiscountImage" class="form-control" type="file" />
            <span asp-validation-for="DiscountImage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Bag Image</label><br />
            @if (!string.IsNullOrEmpty(Model.CurrentBagImageUrl))
            {
                <img src="@Model.CurrentBagImageUrl" width="150" />
            }
        </div>
        <div class="form-group">
            <label asp-for="BagImage">New Bag Image (optional)</label>
            <input asp-for="BagImage" class="form-control" type="file" />
            <span asp-validation-for="BagImage" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
