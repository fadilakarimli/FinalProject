@model IEnumerable<FinalProjectConsume.Models.AboutApp.AboutApp>

<div class="container" style="margin-left:300px; margin-top:50px;">
    <div class="col-sm-12 col-xl-10">
        <a asp-area="Admin" asp-controller="AboutApp" asp-action="Create" class="btn btn-success mb-3">Create</a>
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Main Image</th>
                    <th>Apple Image</th>
                    <th>PlayStore Image</th>
                    <th>Background Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" alt="Main Image" style="width:150px; height:100px; object-fit:cover;" />
                        </td>
                        <td>
                            <img src="@item.AppleImage" alt="Apple Image" style="width:150px; height:100px; object-fit:cover;" />
                        </td>
                        <td>
                            <img src="@item.PlayStoreImage" alt="PlayStore Image" style="width:150px; height:100px; object-fit:cover;" />
                        </td>
                        <td>
                            <img src="@item.BackgroundImage" alt="Background Image" style="width:150px; height:100px; object-fit:cover;" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Desc</td>
                        <td>
                            <form asp-area="Admin" asp-controller="AboutApp" asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="AboutApp" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="AboutApp" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
