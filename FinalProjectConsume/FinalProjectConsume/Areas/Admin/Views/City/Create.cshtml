@model FinalProjectConsume.Models.City.CityCreate

@{
    ViewData["Title"] = "City Create";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryId">Select Country</label>
            <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control">
                <option value="">-- Select Country --</option>
            </select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
