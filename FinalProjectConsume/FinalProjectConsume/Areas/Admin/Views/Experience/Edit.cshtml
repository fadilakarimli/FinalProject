@model FinalProjectConsume.Models.Experience.ExperienceEdit

@{
    ViewData["Title"] = "Edit Experience";
}

<h2>@ViewData["Title"]</h2>
<div class="container" style="margin-left:300px; margin-top:50px;">

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="w-50">
        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TourId"></label>
            <select asp-for="TourId" asp-items="ViewBag.TourList" class="form-control">
                <option value="">-- Select Tour --</option>
            </select>
            <span asp-validation-for="TourId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
    </form>

</div>
