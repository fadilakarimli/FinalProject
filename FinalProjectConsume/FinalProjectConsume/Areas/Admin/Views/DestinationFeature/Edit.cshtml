@model FinalProjectConsume.Models.DestinationFeature.DestinationFeatureEdit

@{
    ViewData["Title"] = "Edit Destination Feature";
}

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>Edit Destination Feature</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TourCount"></label>
            <input asp-for="TourCount" class="form-control" type="number" />
            <span asp-validation-for="TourCount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceFrom"></label>
            <input asp-for="PriceFrom" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PriceFrom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="IconImage">Select New Icon Image (optional)</label>
            <input asp-for="IconImage" type="file" class="form-control" />
            <span asp-validation-for="IconImage" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>
