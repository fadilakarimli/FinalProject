@model List<FinalProjectConsume.Models.Account.User>

<h2>User List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="badge bg-primary">@role</span>
                    }
                </td>
                <td>
                    <form asp-action="AssignRole" asp-controller="User" asp-area="Admin" method="post" class="d-flex gap-1">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="roleName" class="form-select form-sele    ct-sm">
                            <option value="SuperAdmin">SuperAdmin</option>
                            <option value="Admin">Admin</option>
                            <option value="Member">Member</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-info">Approve</button>
                    </form>
                    <form asp-action="RemoveRole" asp-controller="User" asp-area="Admin" method="post" class="d-flex gap-1">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="roleName" class="form-select form-select-sm">
                            @foreach (var role in user.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
